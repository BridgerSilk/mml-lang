doc!.mml

!include native [std.mml]
!include [test/testinclude.mml]

(&mml lang.[en]) {
    (&head) {
        (&meta charset.[UTF-8])
        (&meta name.[viewport] content.[width=device-width, initial-scale=1.0])
        (&title) { test } .&title
        (&link rel.[stylesheet] link.[test.css])

    }.&head

    (&body) {
        static color a = c["red"]
        static color b = c[red=1]
        static color c = c["blue", hue=0]
        static color d = c["#a36b9fff"]
        static color e = c[hsl=(0, 1, 0.5)]

        a = c["blue"]
        a = "test"

        (&text){:a:}.&text
        (&text){:b:}.&text
        (&text){:c:}.&text
        (&text){:d:}.&text
        (&text){:e:}.&text

        (@filetest)

        $export.navbar
        (&nav) {
            (&a link.[./home.html]) { Home } .&a
            (&a link.[./about.html]) { About } .&a
        }.&nav
        $/export

        $export.test
        (&ct cl.[test] wtf.[ok]) {
            (&text cl.[testclass]) { test1 } .&text
            (&text) { test2 } .&text
        }.&ct
        $/export
    
        (&main) {
            (@main)
            (&ct cl.[content] id.[abc]) {
                (&h2 cl.[heading]) { Hello! } .&h2
                (&text cl.[test]) { var content: :var_name: } .&text
                (&text) { Result is: :result: } .&text
            }.&ct
        }.&main

    }.&body
}.&mml

$export.main
    (&text){:var_name:}.&text
$/export